<Application
    x:Class="DataSphere.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:DataSphere.Helpers"
    xmlns:utils="clr-namespace:DataSphere.Utils"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />

                <ResourceDictionary Source="Controls/ReferralCard.xaml" />
                <ResourceDictionary Source="Controls/GalleryNavigationPresenter.xaml" />
                <ResourceDictionary Source="Controls/PageControlDocumentation.xaml" />
                <ResourceDictionary Source="Controls/ControlGroup.xaml" />
                <ResourceDictionary Source="Controls/FormFieldCard.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <helpers:BooleanToString x:Key="BooleanToString" />
            <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <helpers:SubtractDoubleConverter x:Key="SubtractDoubleConverter" />
            <helpers:ThemeToIndexConverter x:Key="ThemeToIndexConverter" />

            <ContextMenu x:Key="DefaultControlContextMenu">
                <MenuItem Header="{utils:Localization ctx_copy_title}" Command="ApplicationCommands.Copy">
                    <MenuItem.Icon>
                        <ui:SymbolIcon Symbol="Copy24" Margin="0 2 0 0" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{utils:Localization ctx_cut_title}" Command="ApplicationCommands.Cut">
                    <MenuItem.Icon>
                        <ui:SymbolIcon Symbol="Cut24" Margin="0 2 0 0" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{utils:Localization ctx_paste_title}" Command="ApplicationCommands.Paste">
                    <MenuItem.Icon>
                        <ui:SymbolIcon Symbol="ClipboardPaste24" Margin="0 2 0 0" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>

            <ControlTemplate x:Key="StarErrorTemplate">
                <Grid>
                    <AdornedElementPlaceholder x:Name="adornerPlaceholder" />
                    <TextBlock 
                        Text="*"
                        Foreground="Red"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="0,2,10,0"
                        HorizontalAlignment="Right" />
                </Grid>
            </ControlTemplate>

            <Style TargetType="ui:TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Validation.ErrorTemplate" Value="{StaticResource StarErrorTemplate}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
