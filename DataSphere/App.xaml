<Application
    x:Class="DataSphere.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:DataSphere.Helpers"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />

                <ResourceDictionary Source="Controls/ReferralCard.xaml" />
                <ResourceDictionary Source="Controls/GalleryNavigationPresenter.xaml" />
                <ResourceDictionary Source="Controls/PageControlDocumentation.xaml" />
                <ResourceDictionary Source="Controls/ControlGroup.xaml" />
                <ResourceDictionary Source="Controls/FormFieldCard.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <helpers:BooleanToString x:Key="BooleanToString" />
            <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <helpers:SubtractDoubleConverter x:Key="SubtractDoubleConverter" />
            <helpers:ThemeToIndexConverter x:Key="ThemeToIndexConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
