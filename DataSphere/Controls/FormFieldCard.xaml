<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DataSphere.Controls"
    xmlns:helpers="clr-namespace:DataSphere.Helpers"
    xmlns:syntax="http://schemas.lepo.co/wpfui/2022/xaml/syntax"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Style TargetType="{x:Type controls:FormFieldCard}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FormFieldCard}">
                    <ui:CardControl Icon="{TemplateBinding Icon}" Margin="2">
                        <ui:CardControl.Header>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <ui:TextBlock
                                    TextWrapping="Wrap"
                                    Text="{TemplateBinding PrimaryText}" />

                                <ui:TextBlock
                                    x:Name="DescriptionBlock"
                                    Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{TemplateBinding DescriptionText}"
                                    TextWrapping="Wrap">
                                </ui:TextBlock>
                            </StackPanel>
                        </ui:CardControl.Header>

                        <ContentPresenter
                            Content="{TemplateBinding Content}" />
                    </ui:CardControl>

                    <!-- Trigger to hide DescriptionBlock based on IsInvisibleDescriptionText -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsInvisibleDescriptionText" Value="True">
                            <Setter TargetName="DescriptionBlock" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
