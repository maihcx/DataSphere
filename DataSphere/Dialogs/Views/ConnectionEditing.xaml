<ui:ContentDialog x:Class="DataSphere.Dialogs.Views.ConnectionEditing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:DataSphere.Dialogs.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:utils="clr-namespace:DataSphere.Utils"
    xmlns:controls="clr-namespace:DataSphere.Controls" 
    xmlns:viewmodels="clr-namespace:DataSphere.Dialogs.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ConnectionEditing}"
    d:DesignHeight="450" d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="{utils:Localization close_title}"
    PrimaryButtonText="{utils:Localization save_title}"
    Title="{utils:Localization dialog_connectset_title}"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:ConnectionEditing}" />
    </ui:ContentDialog.Resources>

    <StackPanel 
        Margin="16" 
        Grid.IsSharedSizeScope="True" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Stretch">
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_conn_name_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ui:TextBox
                Name="txtConnectionName"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="200"
                Text="{Binding ViewModel.ConnectionName, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True}" />
        </Grid>
        <Grid Margin="0 6 0 0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_conn_host_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ui:TextBox
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="200"
                Text="{Binding ViewModel.ConnectionHost, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True}" />
        </Grid>
        <Grid Margin="0 6 0 0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_conn_port_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ui:NumberBox
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="200"
                Value="{Binding ViewModel.ConnectionPort, Mode=TwoWay}" />
        </Grid>
        <Grid Margin="0 6 0 0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_conn_usname_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ui:TextBox
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="200"
                Text="{Binding ViewModel.ConnectionUser, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True}" />
        </Grid>
        <Grid Margin="0 6 0 0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_conn_password_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ui:TextBox
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="200"
                Text="{Binding ViewModel.ConnectionPassword, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True}" />
        </Grid>
    </StackPanel>
</ui:ContentDialog>
