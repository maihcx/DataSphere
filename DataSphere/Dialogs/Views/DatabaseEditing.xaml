<ui:ContentDialog x:Class="DataSphere.Dialogs.Views.DatabaseEditing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:DataSphere.Dialogs.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:utils="clr-namespace:DataSphere.Utils"
    xmlns:controls="clr-namespace:DataSphere.Controls" 
    xmlns:viewmodels="clr-namespace:DataSphere.Dialogs.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DatabaseEditing}"
    d:DesignHeight="450" d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="{utils:Localization close_title}"
    PrimaryButtonText="{utils:Localization save_title}"
    Title="{utils:Localization dialog_databaseset_title}"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:DatabaseEditing}" />
    </ui:ContentDialog.Resources>

    <StackPanel
        Margin="16" 
        Grid.IsSharedSizeScope="True" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Stretch">

        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col2" Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_db_name_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ui:TextBox
                Name="txtDatabaseName"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Width="200"
                Text="{Binding ViewModel.DatabaseName, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True}" />
        </Grid>

        <Grid Margin="0 6 0 0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col2" Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="{utils:Localization dalog_db_collation_title}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0" />

            <ComboBox
                Grid.Column="1"
                HorizontalAlignment="Left"
                ItemsSource="{Binding ViewModel.DatabaseCollation}"
                SelectedItem="{Binding ViewModel.DatabaseCollationSelected, Mode=TwoWay}"
                DisplayMemberPath="Collation" />
        </Grid>

        <Grid Margin="0 6 0 0" HorizontalAlignment="Center"
              TextElement.Foreground="{ui:ThemeResource SystemFillColorCriticalBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col2" Width="*"/>
            </Grid.ColumnDefinitions>
            
            <ui:TextBlock 
                Grid.Column="1"
                x:Name="tblErrorResp"
                Visibility="Collapsed"
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Padding="10 0 0 0" />
        </Grid>
    </StackPanel>
</ui:ContentDialog>