<Page
    x:Class="DataSphere.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataSphere.Views.Pages"
    xmlns:controls="clr-namespace:DataSphere.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="0 0 0 30">
        <controls:ReferralCard
            Title="{Binding ViewModel.SortAuthor, Mode=OneWay}"
            Subtitle="{Binding ViewModel.Author, Mode=OneWay}"
            Description="{Binding ViewModel.AppDescription, Mode=OneWay}"
            FooterText="{Binding ViewModel.AuthorCreated, Mode=OneWay}" />

        <controls:GalleryNavigationPresenter
            Margin="0"
            Padding="0"
            IsVertical="True"
            ItemsSource="{Binding ViewModel.NavigationCards, Mode=OneWay}" />
    </StackPanel>
</Page>
