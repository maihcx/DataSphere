<Page 
    x:Class="DataSphere.Views.Pages.DatabasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:DataSphere.Views.Pages"
    xmlns:controls="clr-namespace:DataSphere.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DatabasePage"
    d:DataContext="{d:DesignInstance local:DatabasePage,
                                    IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <controls:TabsControl 
        ItemsSourceBinding="{Binding ViewModel.TabsViewer}" 
        SelectedItem="{Binding ViewModel.SelectedTab, Mode=TwoWay}"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch"
        Margin="0 0 0 20" />
</Page>
