<UserControl x:Class="DataSphere.Views.Pages.DatabaseGroup.DatabaseViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataSphere.Views.Pages.DatabaseGroup"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:controls="clr-namespace:DataSphere.Controls"
             xmlns:utils="clr-namespace:DataSphere.Utils"
             xmlns:helpers="clr-namespace:DataSphere.Helpers"
             xmlns:dbmodels="clr-namespace:DataSphere.Models.Database"
             xmlns:viewmodel="clr-namespace:DataSphere.ViewModels.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <helpers:TypeOfConverter x:Key="TypeOfConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TreeView
            Tag="{Binding ViewModel}"
            Grid.Column="0"
            ItemsSource="{Binding ViewModel.AllDatabases, Mode=OneWay}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                    <Setter Property="Tag" Value="{Binding DataContext.ViewModel, RelativeSource={RelativeSource AncestorType=TreeView}}" />
                    <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded" />
                    <Style.Triggers>
                        <!--  DatabaseInfo -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource TypeOfConverter}, ConverterParameter={x:Type dbmodels:DatabaseInfo}}" Value="True">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <controls:ContextMenus ItemsSource="{Binding PlacementTarget.Tag.DatabaseContextMenuItems, RelativeSource={RelativeSource Self}}" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <!-- DatabaseCategory -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource TypeOfConverter}, ConverterParameter={x:Type dbmodels:DatabaseCategory}}" Value="True">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <controls:ContextMenus Visibility="Hidden" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <!-- Table -->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource TypeOfConverter}, ConverterParameter={x:Type dbmodels:Table}}" Value="True">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <controls:ContextMenus ItemsSource="{Binding PlacementTarget.Tag.TableContextMenuItems, RelativeSource={RelativeSource Self}}" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type dbmodels:DatabaseInfo}" ItemsSource="{Binding Categories}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="BookDatabase20" FontSize="20" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                    </StackPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type dbmodels:DatabaseCategory}"
                          ItemsSource="{Binding Items}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ContentControl FontSize="20"
                    Content="{Binding Icon}" 
                    Margin="0,0,8,0"
                    Visibility="{Binding Icon, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                    </StackPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type dbmodels:Table}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="AppGeneric20" FontSize="20" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>

            </TreeView.Resources>
        </TreeView>

        <GridSplitter
            Grid.Column="1"
            Width="5"
            Background="{ui:ThemeResource TextFillColorDisabledBrush}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns"/>

        <Border Grid.Column="2">
            <!--<ContentControl 
                Content="{Binding ViewModel.RightPanelContent}" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>-->
        </Border>
    </Grid>
</UserControl>
